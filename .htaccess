# Protección de directorios y archivos sensibles
# {"_META_file_path_": ".htaccess"}

# Denegar acceso a directorios src y config
<Directory "src">
    Require all denied
</Directory>

# Proteger archivos de configuración
<Files "*.ini">
    Require all denied
</Files>

<Files "composer.*">
    Require all denied
</Files>

# Redirigir raíz a public
RewriteEngine On
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ /public/$1 [R=301,L]